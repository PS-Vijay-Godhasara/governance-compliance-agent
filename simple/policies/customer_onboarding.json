{
  "name": "Customer Onboarding Policy",
  "description": "Basic customer validation for account creation",
  "rules": [
    {
      "field": "email",
      "type": "email", 
      "required": true,
      "description": "Valid email address for communication"
    },
    {
      "field": "age",
      "type": "integer",
      "required": true,
      "min": 18,
      "max": 120,
      "description": "Customer must be of legal age"
    },
    {
      "field": "phone",
      "type": "string",
      "required": true,
      "pattern": "^\\+[1-9]\\d{1,14}$",
      "description": "International phone number with country code"
    },
    {
      "field": "full_name",
      "type": "string",
      "required": true,
      "min_length": 2,
      "max_length": 100,
      "description": "Customer's full legal name"
    }
  ]
}