# LLM Configuration (Free Open Models)
LLM_PROVIDER=ollama
LLM_MODEL=mistral:7b
# Alternative models: llama3.2:3b, llama3.2:1b, codellama:7b
LLM_BASE_URL=http://localhost:11434

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Database Configuration
DATABASE_URL=postgresql://governance:password@localhost:5432/governance_db
REDIS_URL=redis://localhost:6379/0

# Application Settings
APP_NAME=Governance Compliance Agent
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Monitoring
ENABLE_TRACING=true
ENABLE_METRICS=true
PROMETHEUS_PORT=8001

# Performance
MAX_WORKERS=4
BATCH_SIZE=100
CACHE_TTL=3600

# Policy Configuration
POLICY_STORE_PATH=./policies
SCHEMA_STORE_PATH=./schemas
RULES_RELOAD_INTERVAL=300