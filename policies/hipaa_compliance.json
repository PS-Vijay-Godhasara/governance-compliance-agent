{
  "policy_id": "hipaa_compliance",
  "name": "HIPAA Healthcare Data Protection Policy",
  "version": "1.2",
  "description": "US HIPAA compliance for protected health information (PHI)",
  "jurisdiction": "US",
  "rules": [
    {
      "field": "patient_info",
      "type": "object",
      "required": true,
      "properties": {
        "patient_id": {"type": "string", "required": true, "pattern": "^PAT[0-9]{8}$"},
        "medical_record_number": {"type": "string", "required": true, "min_length": 6},
        "date_of_birth": {"type": "date", "required": true},
        "ssn_last_four": {"type": "string", "pattern": "^[0-9]{4}$"}
      },
      "description": "Patient identification information"
    },
    {
      "field": "phi_categories",
      "type": "array",
      "required": true,
      "items": {
        "enum": ["demographic", "medical_history", "treatment_records", "billing", "insurance", "lab_results"]
      },
      "min_items": 1,
      "description": "Categories of protected health information"
    },
    {
      "field": "access_controls",
      "type": "object",
      "required": true,
      "properties": {
        "user_authentication": {"type": "boolean", "required": true, "value": true},
        "role_based_access": {"type": "boolean", "required": true, "value": true},
        "minimum_necessary": {"type": "boolean", "required": true, "value": true},
        "audit_trail": {"type": "boolean", "required": true, "value": true}
      },
      "description": "Access control requirements"
    },
    {
      "field": "data_security",
      "type": "object",
      "required": true,
      "properties": {
        "encryption_required": {"type": "boolean", "required": true, "value": true},
        "secure_transmission": {"type": "boolean", "required": true, "value": true},
        "backup_encryption": {"type": "boolean", "required": true, "value": true},
        "device_controls": {"type": "boolean", "required": true, "value": true}
      },
      "description": "Technical safeguards for PHI"
    },
    {
      "field": "business_associate",
      "type": "object",
      "required": false,
      "properties": {
        "baa_signed": {"type": "boolean", "required": true, "value": true},
        "vendor_name": {"type": "string", "required": true},
        "services_provided": {"type": "string", "required": true},
        "phi_access_level": {"type": "string", "enum": ["full", "limited", "none"]}
      },
      "description": "Business associate agreement requirements"
    },
    {
      "field": "patient_rights",
      "type": "object",
      "required": true,
      "properties": {
        "right_to_access": {"type": "boolean", "required": true, "value": true},
        "right_to_amend": {"type": "boolean", "required": true, "value": true},
        "right_to_accounting": {"type": "boolean", "required": true, "value": true},
        "right_to_restrict": {"type": "boolean", "required": true, "value": true}
      },
      "description": "Patient rights under HIPAA"
    },
    {
      "field": "breach_response",
      "type": "object",
      "required": true,
      "properties": {
        "incident_response_plan": {"type": "boolean", "required": true, "value": true},
        "risk_assessment_process": {"type": "boolean", "required": true, "value": true},
        "notification_procedures": {"type": "boolean", "required": true, "value": true},
        "documentation_requirements": {"type": "boolean", "required": true, "value": true}
      },
      "description": "Breach notification and response procedures"
    }
  ],
  "security_requirements": [
    {
      "name": "administrative_safeguards",
      "requirements": [
        "security_officer_assigned",
        "workforce_training_completed",
        "access_management_procedures",
        "contingency_plan_documented"
      ]
    },
    {
      "name": "physical_safeguards",
      "requirements": [
        "facility_access_controls",
        "workstation_security",
        "device_media_controls"
      ]
    },
    {
      "name": "technical_safeguards",
      "requirements": [
        "access_control_systems",
        "audit_controls_implemented",
        "integrity_controls_active",
        "transmission_security_enabled"
      ]
    }
  ],
  "violation_penalties": {
    "tier_1": {"range": "$100-$50000", "description": "Unknowing violation"},
    "tier_2": {"range": "$1000-$50000", "description": "Reasonable cause"},
    "tier_3": {"range": "$10000-$50000", "description": "Willful neglect, corrected"},
    "tier_4": {"range": "$50000-$1500000", "description": "Willful neglect, not corrected"}
  }
}