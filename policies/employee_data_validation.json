{
  "policy_id": "employee_data_validation",
  "name": "Employee Data Validation Policy",
  "version": "1.3",
  "description": "Validation rules for employee information and HR data",
  "rules": [
    {
      "field": "employee_id",
      "type": "string",
      "required": true,
      "pattern": "^EMP[0-9]{6}$",
      "description": "Unique employee identifier"
    },
    {
      "field": "personal_info",
      "type": "object",
      "required": true,
      "properties": {
        "first_name": {"type": "string", "required": true, "min_length": 1, "max_length": 50},
        "last_name": {"type": "string", "required": true, "min_length": 1, "max_length": 50},
        "email": {"type": "email", "required": true, "pattern": ".*@company\\.com$"},
        "phone": {"type": "phone", "required": true},
        "date_of_birth": {"type": "date", "required": true, "max_date": "today-16years"}
      },
      "description": "Employee personal information"
    },
    {
      "field": "employment_details",
      "type": "object",
      "required": true,
      "properties": {
        "hire_date": {"type": "date", "required": true, "max_date": "today"},
        "department": {"type": "string", "required": true, "enum": ["Engineering", "Sales", "Marketing", "HR", "Finance", "Operations"]},
        "position": {"type": "string", "required": true, "min_length": 2},
        "employment_type": {"type": "string", "required": true, "enum": ["full_time", "part_time", "contract", "intern"]},
        "manager_id": {"type": "string", "pattern": "^EMP[0-9]{6}$"},
        "salary": {"type": "number", "min": 30000, "max": 500000}
      },
      "description": "Employment and job details"
    },
    {
      "field": "security_clearance",
      "type": "object",
      "required": false,
      "properties": {
        "level": {"type": "string", "enum": ["public", "internal", "confidential", "secret"]},
        "granted_date": {"type": "date"},
        "expiry_date": {"type": "date", "min_date": "today"},
        "background_check_completed": {"type": "boolean", "value": true}
      },
      "description": "Security clearance information"
    },
    {
      "field": "benefits_enrollment",
      "type": "object",
      "required": false,
      "properties": {
        "health_insurance": {"type": "boolean"},
        "dental_insurance": {"type": "boolean"},
        "retirement_plan": {"type": "boolean"},
        "enrollment_date": {"type": "date"}
      },
      "description": "Benefits enrollment status"
    },
    {
      "field": "emergency_contact",
      "type": "object",
      "required": true,
      "properties": {
        "name": {"type": "string", "required": true, "min_length": 2},
        "relationship": {"type": "string", "required": true, "enum": ["spouse", "parent", "sibling", "child", "friend", "other"]},
        "phone": {"type": "phone", "required": true},
        "email": {"type": "email"}
      },
      "description": "Emergency contact information"
    },
    {
      "field": "compliance_training",
      "type": "array",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "training_name": {"type": "string", "required": true},
          "completion_date": {"type": "date", "required": true},
          "expiry_date": {"type": "date"},
          "status": {"type": "string", "enum": ["completed", "in_progress", "overdue"]}
        }
      },
      "min_items": 1,
      "description": "Required compliance training records"
    }
  ],
  "business_rules": [
    {
      "name": "manager_hierarchy_validation",
      "condition": "manager_id != employee_id",
      "description": "Employee cannot be their own manager"
    },
    {
      "name": "intern_age_requirement",
      "condition": "employment_type == 'intern' AND age >= 16",
      "description": "Interns must be at least 16 years old"
    },
    {
      "name": "salary_department_consistency",
      "condition": "department == 'Engineering' AND salary >= 70000",
      "description": "Engineering positions have minimum salary requirements"
    },
    {
      "name": "security_clearance_expiry",
      "condition": "security_clearance.level IN ['confidential', 'secret'] AND security_clearance.expiry_date > today",
      "description": "High-level security clearances must not be expired"
    }
  ],
  "data_retention": {
    "active_employee": "indefinite",
    "terminated_employee": "7_years",
    "applicant_data": "1_year"
  },
  "privacy_requirements": {
    "salary_access": "hr_and_manager_only",
    "medical_info": "hr_only",
    "performance_reviews": "hr_and_manager_only",
    "emergency_contacts": "hr_and_security_only"
  }
}